{
  "name": "index-with-meilisearch",
  "description": "Directus custom extension which provice Operation for flow which allow to index collection in meilisearch",
  "icon": "extension",
  "version": "1.0.0",
  "keywords": [
    "directus",
    "directus-extension",
    "directus-extension-operation"
  ],
  "type": "module",
  "files": [
    "dist"
  ],
  "directus:extension": {
    "type": "operation",
    "path": {
      "app": "dist/app.js",
      "api": "dist/api.js"
    },
    "source": {
      "app": "src/app.ts",
      "api": "src/api.ts"
    },
    "host": "^10.10.0"
  },
  "scripts": {
    "build": "directus-extension build",
    "dev": "directus-extension build -w --no-minify",
    "link": "directus-extension link",
    "upload": "node scripts/upload.js",
    "buildAndUpload": "npm run build && npm run upload"
  },
  "devDependencies": {
    "@directus/extensions-sdk": "17.0.3",
    "@types/node": "^22.10.5",
    "typescript": "^5.7.2",
    "vue": "^3.5.13"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "meilisearch": "^0.54.0",
    "ssh2": "^1.17.0"
  }
}
